
<h3 class="title is-3 m-5">Trip Details</h3>
<div class="box m-5">
  <p>
    <strong>Destination:</strong> 
    <%= link_to @trip.destination.name, destination_path(@trip.destination) %> 
    (<%= @trip.destination.location %>)
  </p>
  <p>
    <strong>Traveler:</strong> 
    <%= @trip.user.first_name %> 
    <%= @trip.user.last_name %>
  </p>
  <p>
    <strong>Travel Date:</strong> 
    <%= @trip.travel_date.strftime("%B %d, %Y") %>
  </p>
  
  <% if @trip.destination.image.attached? %>
    <p>
        <strong>Destination Image:</strong>
    </p>
    <%= image_tag @trip.destination.image, class: "image is-3by2", alt: @trip.destination.name %>
  <% end %>

  <%= link_to "Back to Trips", trips_path, class: "button is-link mt-4 m-5" %>
</div>